%head
  :css
    /* 本ページ */
    .field,.actions{
      margin-bottom: 10px;
    }
    a{
      color:#666;
    }
    a:hover{
    background-color:#000;
    }
    #error_explanation{
      color:red;
    }
%body
  .container.main-container
    %p#notice
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :name
        %br/
        = f.text_field :name, autofocus: true, autocomplete: "name",class:"name",id:"user_name"
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email",class:"email",id:"email"
      .field
        = f.label :postal_code
        %br/
        = f.text_field :postal_code, autofocus: true, placeholder: '', class: "postal_code", id: "address_zipcode"
      .field
        = f.label :prefecture_code
        %br/
        = f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, class: "address"
      .field
        = f.label :city
        %br/
        = f.text_field :city, autofocus: true, placeholder: '', class: "address", id:"address_city"
      .field
        = f.label :street
        %br/
        = f.text_field :street, autofocus: true, placeholder: '', class: "address_street"
      .field
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "new-password",class:"password",id:"user_password"
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password",class:"password_confirm",id:"user_password_confirmation"
      .actions
        = f.submit "Sign up",class:"btn btn-success",data: { disable_with: "Sign up" }
    = render "devise/shared/links"
