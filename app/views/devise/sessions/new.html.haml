%head
  :css
    /* 本ページ */
    .field,.actions{
      margin-bottom: 10px;
    }
    a{
      color:#666;
    }
    a:hover{
    background-color:#000;
    }
%body
  .container.main-container
    %p#notice
    %h2 Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :name
        %br/
        = f.text_field :name, autofocus: true, autocomplete: "name",class:"name",id:"name"
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "new-password", class:"password", id:"password"
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me,id:"remember_me"
          = f.label :remember_me
      .actions
        = f.submit "Log in", class:"btn btn-primary",data: { disable_with: "Sign up" }
    = render "devise/shared/links"
