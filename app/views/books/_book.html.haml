- if book.favorited_by?(current_user)
  = link_to book_favorites_path(book), method: :delete, remote: true do
    %span.glyphicon.glyphicon-heart{"aria-hidden" => "true"}= book.favorites.count
- else
  = link_to book_favorites_path(book), method: :post, remote: true do
    %span.glyphicon.glyphicon-heart-empty{"aria-hidden" => "true"}= book.favorites.count
