%table.table
  %thead
    %tr
      %th image
      %th name
      %th{:colspan => "3"}
  %tbody
    - users.each do |user|
      %tr
        %td
          = attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg"
        %td= user.name
        %td
          フォロー数：#{user.followings.count}
        %td
          フォロワー数：#{user.followers.count}
        %td= render 'relationships/follow_button', user: user
        %td= link_to"Show", user_path(user.id),class:"users_show"
