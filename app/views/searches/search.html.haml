.container
  / books一覧
  - if @range == '2'
    %h2
      Books search for ' #{@word} '
    %table.table.table-hover.table-inverse
      %thead
        %tr
          %th
          %th Title
          %th Opinion
          %th{:colspan => "3"}
      %tbody
        - @books.each do |book|
          %tr
            %td
              = link_to(book.user) do
                = attachment_image_tag(book.user, :profile_image, size: "40x40", fallback: "no_image.jpg")
            %td
              = link_to book.title, book, class: "book_#{book.id}"
            %td= book.body
  - else
    %h2
      Users search for ' #{@word} '
    %table.table.table-hover.table-inverse
      %thead
        %tr
          %th image
          %th name
          %th{:colspan => "3"}
      %tbody
        - @users.each do |user|
          %tr
            %td= attachment_image_tag(user, :profile_image, size: "40x40", fallback: "no_image.jpg")
            %td= user.name
            %td= link_to "Show", user, class: "user_#{user.id}"
